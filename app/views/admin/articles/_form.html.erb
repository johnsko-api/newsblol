<h2> Article Form </h2>
<%= form_for [:admin, @article], :html => { :multipart => true } do |f| %>
  <%= f.label :image, "Image File" %>
  <%= f.file_field :image %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>
